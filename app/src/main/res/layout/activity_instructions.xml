<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapp2"
    tools:context="com.example.simonh07.phlant.Instructions">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/instructs"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:padding="25dp"
        android:src="@drawable/loading"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_marginTop="35dp"
        android:id="@+id/explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="This image means that the image is buffering. Tap the screen to proceed with the next instruction"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/instructs"/>

</RelativeLayout>

</ScrollView>